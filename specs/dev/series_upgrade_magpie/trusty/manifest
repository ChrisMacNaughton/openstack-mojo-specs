# Collect the charm
collect config=collect-magpie

# Deploy ubuntu-lite bundle
deploy config=magpie.yaml delay=0 wait=False

# Wait for deployment to settle
verify config=check_juju.py

# Upgrade units
script config=scripts/upgrade_all_units.py FROM='trusty' TO='xenial'

# Wait for deployment to settle
verify config=check_juju.py

# Success
