# Collect the charm branches from Launchpad
collect config=collect-next-xenial

# Use juju deployer with full.yaml bundle
deploy config=full.yaml delay=0 wait=False target=${MOJO_SERIES}-newton

# Create sdn on overcloud
script config=network_setup.py

# Setup glance images
script config=image_setup.py

# Setup keystone users
script config=keystone_setup.py

# Create 1 * tiny cirros and 1 * small precise instances on the overcloud
verify config=simple_os_checks.py MACHINES='cirros:m1.tiny:1' CLOUDINIT_WAIT="300"

# Upgrade Openstack
script config=upgrade_openstack.py

# Create 1 * tiny cirros and 1 * small precise instances on the overcloud
verify config=simple_os_checks.py MACHINES='cirros:m1.tiny:1' CLOUDINIT_WAIT="300"

# Success
